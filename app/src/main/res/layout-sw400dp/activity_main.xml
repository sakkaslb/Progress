<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#ff000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgMenu"
        android:src="@drawable/ic_menu"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text=""
        android:id="@+id/menu_btnGoals"
        android:layout_marginBottom="@dimen/size155dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/size25dp"
        android:visibility="invisible"/>

    <Button
        android:layout_width="@dimen/size80dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text=""
        android:id="@+id/menu_btnSnapshot"
        android:layout_marginLeft="@dimen/size30dp"
        android:layout_above="@+id/menu_btnProgress"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:text=""
        android:id="@+id/menu_btnProgress"
        android:layout_alignTop="@+id/menu_btnGoals"
        android:layout_toEndOf="@+id/menu_btnSnapshot"
        android:layout_marginLeft="@dimen/size30dp"
        android:visibility="invisible"/>1

    <Button
        android:layout_width="@dimen/size80dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text=""
        android:id="@+id/menu_btnSocial"
        android:layout_below="@+id/menu_btnGoals"
        android:layout_alignTop="@+id/menu_btnGoals"
        android:layout_marginTop="@dimen/size75dp"
        android:layout_marginLeft="@dimen/size80dp" />
    <Button
        android:layout_width="@dimen/size80dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text=""
        android:id="@+id/menu_btnMemoryLane"
        android:layout_below="@+id/menu_btnGoals"
        android:layout_alignTop="@+id/menu_btnGoals"
        android:layout_toEndOf="@+id/menu_btnSocial"
        android:layout_marginTop="@dimen/size75dp"
        android:layout_marginLeft="@dimen/size70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/menu_privacypolicy"
        android:layout_marginTop="@dimen/size20dp"
        android:id="@+id/txtPrivacyPolicy"
        android:layout_below="@+id/menu_btnSocial"
        android:layout_alignParentStart="true"
        android:textColor="@color/accent"/>
</RelativeLayout>